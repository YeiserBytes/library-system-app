{
  "kind": "collectionType",
  "collectionName": "notifications",
  "info": {
    "singularName": "notification",
    "pluralName": "notifications",
    "displayName": "Notification"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "notification_type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "reminder",
        "alert",
        "info",
        "warning"
      ]
    },
    "is_read": {
      "type": "boolean",
      "default": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "notifications"
    },
    "loan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::loan.loan",
      "inversedBy": "notifications"
    }
  }
}
