{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "books"
    },
    "isbn": {
      "type": "string",
      "unique": true
    },
    "code": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "publisher": {
      "type": "string"
    },
    "publication_year": {
      "type": "integer",
      "required": false
    },
    "total_copies": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "available_copies": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "location": {
      "type": "string",
      "required": false
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "books"
    },
    "loans": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::loan.loan",
      "mappedBy": "book"
    },
    "reservations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::reservation.reservation",
      "mappedBy": "book"
    },
    "book_status": {
      "type": "enumeration",
      "enum": [
        "available",
        "borrowed",
        "reserved",
        "inactive"
      ]
    }
  }
}
